<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pemaseervi.myretailer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.pemaseervi.myretailer.NotificationActivity"></activity>
        <activity android:name="com.pemaseervi.myretailer.SearchActivity" />
        <activity android:name="com.pemaseervi.myretailer.CartActivity" />
        <activity android:name="com.pemaseervi.myretailer.CategoryWiseAllProductsActivity" />
        <activity android:name="com.pemaseervi.myretailer.OtpVerificationActivity" />
        <activity android:name="com.pemaseervi.myretailer.ViewAllActivity" />
        <activity android:name="com.pemaseervi.myretailer.MyAddressesActivity" />
        <activity
            android:name="com.pemaseervi.myretailer.AddAddressActivity"
            android:theme="@style/RedProgressbar" />
        <activity android:name="com.pemaseervi.myretailer.DeliveryActivity" />
        <activity android:name="com.pemaseervi.myretailer.OrderDetailsActivity" />
        <activity android:name="com.pemaseervi.myretailer.ProductDetailsActivity" />
        <activity android:name="com.pemaseervi.myretailer.CategoryActivity" />
        <activity
            android:name="com.pemaseervi.myretailer.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pemaseervi.myretailer.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.pemaseervi.myretailer.SplashScreen" />
        <activity android:name="com.pemaseervi.myretailer.VerificationCodeActivity" />
        <activity android:name="com.pemaseervi.myretailer.PhoneNumberActivity" />
        <activity android:name="com.pemaseervi.myretailer.CountryCodeActivity" />
        <activity
            android:name="com.pemaseervi.myretailer.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.paytm.pgsdk.PaytmPGActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/paytmTheme"
            tools:replace="android:theme" />
        <service android:name="com.pemaseervi.myretailer.utility.FcmMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"></action>
            </intent-filter>
        </service>
    </application>

</manifest>